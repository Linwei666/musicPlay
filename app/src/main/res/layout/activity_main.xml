<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/colorRed">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:src="@mipmap/menu_logo"/>
        <com.xuexiang.xui.widget.searchview.MaterialSearchView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <!--fragment区域-->
    <FrameLayout
        android:id="@+id/content_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:background="@color/colorRed">
        <LinearLayout
            android:id="@+id/main_tab1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="setMainTabClick"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@mipmap/music_logo1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="我的"
                android:textSize="14dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/main_tab2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="setMainTabClick"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@mipmap/community_logo1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="社区"
                android:textSize="14dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/main_tab3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="setMainTabClick"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@mipmap/music_logo2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="我的"
                android:textSize="14dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/main_tab4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="setMainTabClick"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@mipmap/community_logo2"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="社区"
                android:textSize="14dp"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>